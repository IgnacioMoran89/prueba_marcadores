<div class="container">  
  <p id="notice"><%= notice %></p>

  <div class="form">
    <%= render 'form', marker: @marker %>
  </div>

<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody id = "markers">
      <% @markers.each do |marker| %>
        <tr>
          <td><%= marker.name %></td>
          <td><%= marker.url %></td>
          <td>
              <% marker.categories.each do |c| %>
                  <%= c %> <br>
              <% end %>
          </td>

      <% end %>
    </tbody>
</table>

  <br>

  
</div> 
